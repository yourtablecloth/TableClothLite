@inject IJSRuntime JSRuntime

@if (Show)
{
    <div class="pwa-guide-overlay" @onclick="Close">
        <div class="pwa-guide-modal" @onclick:stopPropagation="true">
            <button class="close-btn" @onclick="Close" type="button">✕</button>
            
            <div class="guide-header">
                <div class="guide-icon">📲</div>
                <h2>앱으로 설치하기</h2>
                <p>식탁보 AI를 홈 화면에 추가하면 더 빠르고 편리하게 사용할 수 있습니다!</p>
            </div>

            <div class="guide-content">
                @if (platform == "android-chrome")
                {
                    <div class="platform-guide">
                        <h3>📱 Android Chrome에서 설치하기</h3>
                        <ol>
                            <li>화면 오른쪽 상단의 <strong>⋮</strong> (메뉴) 버튼을 탭합니다</li>
                            <li><strong>"홈 화면에 추가"</strong> 또는 <strong>"앱 설치"</strong>를 선택합니다</li>
                            <li><strong>"설치"</strong> 버튼을 탭합니다</li>
                            <li>홈 화면에 식탁보 AI 아이콘이 추가됩니다!</li>
                        </ol>
                    </div>
                }
                else if (platform == "ios-safari")
                {
                    <div class="platform-guide">
                        <h3>🍎 iOS Safari에서 설치하기</h3>
                        <ol>
                            <li>화면 하단의 <strong>공유</strong> 버튼 <strong>(↗️)</strong>을 탭합니다</li>
                            <li>아래로 스크롤하여 <strong>"홈 화면에 추가"</strong>를 찾습니다</li>
                            <li><strong>"홈 화면에 추가"</strong>를 탭합니다</li>
                            <li>오른쪽 상단의 <strong>"추가"</strong> 버튼을 탭합니다</li>
                            <li>홈 화면에 식탁보 AI 아이콘이 추가됩니다!</li>
                        </ol>
                        <div class="tip">
                            💡 <strong>팁:</strong> Safari가 아닌 다른 브라우저를 사용 중이라면, Safari로 이 페이지를 열어주세요.
                        </div>
                    </div>
                }
                else if (platform == "desktop-chrome")
                {
                    <div class="platform-guide">
                        <h3>💻 Desktop Chrome/Edge에서 설치하기</h3>
                        <ol>
                            <li>주소창 오른쪽의 <strong>설치</strong> 아이콘 <strong>(⊕)</strong>을 클릭합니다</li>
                            <li>또는 주소창 오른쪽의 <strong>⋮</strong> (메뉴) → <strong>"앱 설치"</strong>를 선택합니다</li>
                            <li><strong>"설치"</strong> 버튼을 클릭합니다</li>
                            <li>데스크톱에 식탁보 AI가 앱으로 설치됩니다!</li>
                        </ol>
                    </div>
                }
                else
                {
                    <div class="platform-guide">
                        <h3>📱 일반적인 설치 방법</h3>
                        <p>브라우저 메뉴에서 다음 중 하나를 찾아보세요:</p>
                        <ul>
                            <li>"홈 화면에 추가"</li>
                            <li>"앱 설치"</li>
                            <li>"바로가기 추가"</li>
                            <li>"즐겨찾기에 추가"</li>
                        </ul>
                    </div>
                }

                <div class="benefits-section">
                    <h4>✨ 앱으로 사용하면 좋은 점</h4>
                    <div class="benefits-grid">
                        <div class="benefit">
                            <span class="benefit-icon">⚡</span>
                            <div>
                                <strong>빠른 실행</strong>
                                <small>홈 화면에서 바로 실행</small>
                            </div>
                        </div>
                        <div class="benefit">
                            <span class="benefit-icon">📱</span>
                            <div>
                                <strong>전체 화면</strong>
                                <small>브라우저 UI 없이 넓게</small>
                            </div>
                        </div>
                        <div class="benefit">
                            <span class="benefit-icon">🔔</span>
                            <div>
                                <strong>오프라인 사용</strong>
                                <small>인터넷 없이도 일부 기능</small>
                            </div>
                        </div>
                        <div class="benefit">
                            <span class="benefit-icon">💾</span>
                            <div>
                                <strong>자동 업데이트</strong>
                                <small>항상 최신 버전 유지</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="guide-footer">
                <button class="btn-primary" @onclick="Close" type="button">
                    확인
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool Show { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    private string platform = "general";

    protected override async Task OnParametersSetAsync()
    {
        if (Show)
        {
            await DetectPlatform();
        }
    }

    private async Task DetectPlatform()
    {
        try
        {
            var userAgent = await JSRuntime.InvokeAsync<string>("eval", "navigator.userAgent");
            
            if (userAgent.Contains("iPhone") || userAgent.Contains("iPad") || userAgent.Contains("iPod"))
            {
                platform = "ios-safari";
            }
            else if (userAgent.Contains("Android"))
            {
                platform = "android-chrome";
            }
            else if (userAgent.Contains("Chrome") || userAgent.Contains("Edge"))
            {
                platform = "desktop-chrome";
            }
            else
            {
                platform = "general";
            }
        }
        catch
        {
            platform = "general";
        }
    }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }
}

<style>
    .pwa-guide-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10001;
        padding: 20px;
        animation: fadeIn 0.2s;
    }

    .pwa-guide-modal {
        background: var(--card-bg, white);
        color: var(--primary-text, #2c3e50);
        border-radius: 16px;
        max-width: 600px;
        width: 100%;
        max-height: 90vh;
        overflow-y: auto;
        position: relative;
        animation: slideUp 0.3s ease-out;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @@keyframes slideUp {
        from {
