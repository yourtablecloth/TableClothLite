@code {
    [Parameter] public string Title { get; set; } = "Windows Sandbox 안내";
    [Parameter] public bool IsWindowsOS { get; set; } = true;
    [Parameter] public EventCallback OnClose { get; set; }

    private bool DontShowAgain { get; set; } = false;

    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;

    private async Task Close()
    {
        if (DontShowAgain)
        {
            var storageKey = IsWindowsOS ? "dont-show-windows-sandbox-guide" : "dont-show-other-os-guide";
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", storageKey, "true");
        }
        
        await OnClose.InvokeAsync();
    }

    private async Task HandleBackdropClick()
    {
        await Close();
    }

    private async Task OpenWindowsFeatures()
    {
        try
        {
            var success = await JSRuntime.InvokeAsync<bool>("openWindowsFeatures");
            
            if (!success)
            {
                // Fallback 안내
                await JSRuntime.InvokeVoidAsync("alert", 
                    "Windows 기능을 자동으로 열 수 없습니다.\n\n" +
                    "수동으로 열려면:\n" +
                    "1. Win + R을 누르세요\n" +
                    "2. 'optionalfeatures'를 입력하고 Enter를 누르세요\n" +
                    "3. 또는 '설정 > 앱 > 선택적 기능'으로 이동하세요");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Windows 기능 열기 중 오류: {ex.Message}");
            
            // 오류 발생 시 안내 메시지
            await JSRuntime.InvokeVoidAsync("alert", 
                "Windows 기능 페이지 열기에 실패했습니다.\n\n" +
                "수동으로 열어주세요:\n" +
                "• Win + R → 'optionalfeatures' 입력\n" +
                "• 또는 설정 → 앱 → 선택적 기능");
        }
        
        await Close();
    }
}